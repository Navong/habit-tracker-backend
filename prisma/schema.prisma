generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Habit {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId // MongoDB uses auto-generated ObjectId by default
  name           String
  description    String?
  goal           Int
  frequency      String
  color          String
  completedDates String[]
  category       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}